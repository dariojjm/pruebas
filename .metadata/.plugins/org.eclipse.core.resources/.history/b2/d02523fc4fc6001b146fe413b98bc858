package modelo;

import java.util.Scanner;

public class Principal {
	public static void main(String[] args) {

		String letrasMorse[]= {".-","-...","-.-.","-..",".","..-.","--.","....","..",".---","-.-",".-..","--","-.","---",".--.","--.-",".-.","...","-","..-","...-",".--","-..-","-.--","--.."};
		String numerosMorse[]= {".----","..---","...--","....-",".....","-....","--...","---..","----.","-----"};
		String cad;
		String morse="";
		Scanner entrada= new Scanner(System.in);
		//System.out.println("Menu \n 1.-Español a Morse \n 2.- Morse a Español \n 3.-Salir");
		//int op=entrada.nextInt();
		System.out.println("Ingrese la palabra");
		cad=entrada.nextLine();
		cad=cad.toUpperCase();

		if(cad.length()>0) {
			if(cad.charAt(0)!='.'&&cad.charAt(0)!='-') {
				for (int i = 0; i < cad.length(); i++) {
					if(cad.charAt(i)!=' ') {
						if(esNumero(cad.charAt(i)+"")) {
							// saco el numero del arreglo restando 1 por las posiciones del array
							morse=morse.concat(numerosMorse[Integer.parseInt(cad.charAt(i)+"")-1]+" ");
						}else {
							morse=morse.concat(letrasMorse[Integer.parseInt((cad.charAt(i)-'A')+"")]+" ");
						}

					}else {
						morse=morse.concat("    ");
					}
				}
			}else {
				int cont=0;
				String aux="";
				for (int i = 0; i < cad.length(); i++) {
					if(cad.charAt(i)==' ') {
						if (cad.charAt(i+1)==' ') {
							i=i+3;
						}else {
							morse=morse.concat(" ");
						}
					}else {
						
					}
				}
			}
			System.out.println("\n"+morse);

		}
	}
		public static boolean esNumero(String numero) {
			try {
				Integer.parseInt(numero);
				return true;
			} catch (NumberFormatException e) {
				return false;	
			}
		}
	}
